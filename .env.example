# Salesforce Agentforce Configuration
# Copy this file to .env and update with your actual values

# Salesforce Instance URL
AGENTFORCE_INSTANCE_URL=https://your-org.salesforce.com

# OAuth2 Client Credentials (from Connected App)
AGENTFORCE_CLIENT_ID=your_client_id_here
AGENTFORCE_CLIENT_SECRET=your_client_secret_here

# Agent Configuration
AGENTFORCE_AGENT_ID=your_agent_id_here

# Username/Password Authentication (if needed)
AGENTFORCE_USERNAME=your_username@yourdomain.com
AGENTFORCE_PASSWORD=your_password
AGENTFORCE_SECURITY_TOKEN=your_security_token
